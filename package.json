{
  "name": "van-timetable-app",
  "version": "1.3.2",
  "description": "MAP Van Timetable Application",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhdhanji/van-timetable-app.git"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --windows -p always",
    "build:mac": "electron-builder --mac",
    "publish": "electron-builder --windows -p always"
  },
  "author": "Mohammed Dhanji",
  "license": "ISC",
  "dependencies": {
    "firebase": "^10.7.1",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "auto-launch": "^5.0.5"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.vantimetable.app",
    "productName": "Van Timetable",
    "asar": true,
    "files": [
      "**/*",
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "script.js",
      "icon.png"
    ],
    "asarUnpack": [
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Mohammed Dhanji"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Van Timetable",
      "deleteAppDataOnUninstall": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "installerIcon": "icon.png",
      "uninstallerIcon": "icon.png",
      "installerHeaderIcon": "icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "mhdhanji",
      "repo": "van-timetable-app",
      "releaseType": "release",
      "publishAutoUpdate": true,
      "private": false,
      "vPrefixedTagName": false
    },
    "afterSign": "scripts/notarize.js",
    "afterPack": "scripts/afterPack.js"
  }
}