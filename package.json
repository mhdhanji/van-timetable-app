{
  "name": "van-timetable-app",
  "version": "1.0.7",
  "description": "MAP Van Timetable Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --windows -p always",
    "build:mac": "electron-builder --mac",
    "publish": "electron-builder --windows -p always"
  },
  "author": "Mohammed Dhanji",
  "license": "ISC",
  "dependencies": {
    "firebase": "^10.7.1",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.vantimetable.app",
    "productName": "Van Timetable",
    "asar": false,
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Van Timetable"
    },
    "publish": {
      "provider": "github",
      "owner": "mhdhanji",
      "repo": "van-timetable-app",
      "releaseType": "release"
    }
  }
}