{
  "name": "van-timetable-app",
  "version": "1.5.3",
  "description": "MAP Van Timetable Application",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mhdhanji/van-timetable-app.git"
  },
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --windows -p always",
    "build:mac": "electron-builder --mac",
    "publish": "electron-builder --windows -p always",
    "publish:mac": "electron-builder --mac -p always"
  },
  "author": "Mohammed Dhanji",
  "license": "ISC",
  "dependencies": {
    "firebase": "^10.7.1",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "auto-launch": "^5.0.5"
  },
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.vantimetable.app",
    "productName": "Van Timetable",
    "asar": true,
    "files": [
      "**/*",
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "script.js",
      "icon.png",
      "data-manager.js",
      "data/**/*",
      "version.json"
    ],
    "asarUnpack": [
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities",
      "icon": "icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Van Timetable"
    },
    "publish": {
      "provider": "github",
      "owner": "mhdhanji",
      "repo": "van-timetable-app",
      "releaseType": "release",
      "publishAutoUpdate": true,
      "private": false,
      "vPrefixedTagName": false
    }
  }
}